            <label for="fname" class="form-label">Prénom</label>
            <input type="fname" class="form-control" id="fname" Prenom="fname" placeholder="Votre prénom">
            <div class="form-text">Votre Prénom</div>
            <br>
            <label for="surName" class="form-label">Nom</label>
            <input type="fname" class="form-control" id="fname" name="fname" placeholder="Votre nom">
            <div class="form-text">Votre Nom</div>
            <br>
            <button type="submit" class="btn btn-success btn-lg">Envoyer</button>
        </form>
        <br />
    </div>

<hr class="star-primary">
