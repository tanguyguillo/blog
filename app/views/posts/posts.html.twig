{% extends 'base.html.twig' %}

{% block title %}<title>Listing des articles du Blog</title>{% endblock %}

{% block header %}
<header>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Listing des articles</h1>
                <hr>
                {% for post in posts %}  
                    {% if post.postStatus == 'Open' %} 
                    <h2><a style="color:aliceblue" href="index.php?owp=bloglist&id={{post.id}}">{{post.postTitle}}</a></h2>
                    <h6 id={{post.id}}>Dernière modification : {{post.frenchModifiedDate}}</h6>
                    <p class="align-left"><i class="bi bi-star-fill">&nbsp;&nbsp;</i ></p>{{post.postChapo}}</p>
                    <a href="index.php?owp=bloglist&id={{post.id}}" class="btn btn-primary btn-small" role="button" title="En savoir plus ?">En savoir plus ?</a> 
                    <hr>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
    </div>
</header>

