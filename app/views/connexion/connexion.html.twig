{% extends 'base.html.twig' %}

{% block title %}<title>Connection utilisateur blog.omegawebprod</title>{% endblock %}

{% block connexion %}
<div class="d-flex flex-column min-vh-100">
<section id="inscription">
<div class="container">
<div class="row">

<h3 class="text-center">Connection</h3>
<hr class="star-primary">
    <div class="container">
        <h4 class="text-center">Connectez vous</h4>
        <p><span class="text-center">Pour pouvoir écrire un commentaire, connectez vous</span></p>

    {% if arrayMessage.message != false  %}
    <div class="alert alert-danger">
        <strong> {{ arrayMessage.message }} </strong> 
    </div>
    {% endif %}
    
    {# <p>Article de retour après connection : ID :   {{ session.LOGGED_PAGE_ID }}</p>   #}
    <!-- Only HTTPS crypt POST data so DO use it -->
            <form action="{{ baseUrl }}index.php?owp=detailconnexion" method="post">     

            <div class="form-group">
                <label for="userEmail">Votre Email</label>
                <input type="email" class="form-control" id="log"  name="user_login"  required placeholder="Entrez votre Email">
                <br>
            </div>

            {# session.LOGGED_PAGE_ID is the page from where we come from #}
            <div class="form-group">
                <input id="postId" name="postId" type="hidden" value={{ session.LOGGED_PAGE_ID }}>
            </div>

            <div class="form-group" id="connexion">
                <label for="userPpassword">Votre mot de passe</label>
                <input type="password" class="form-control" id="pwd" name="user_pass" minlength="12" required placeholder="Mot de passe">
                <div class="form-text">Le mot de passe est constitué d'au minimum 12 caractères, une phrase facile à retenir et pas déja utilisée sur un autre site</div>
            </div>
            <button type="submit" class="btn btn-success btn-lg btn-block">Se connecter</button>

            <div class="form-group" id="deconnexion"></div>
                <a href="index.php?owp=se-deconnectez" class="btn btn-danger  btn-lg btn-block" role="button" aria-pressed="true">Se déconnecter</a>
            </div>
        </form>
        <br />

    </div>
    
</div>
</div>
</div>
<br>
{% endblock %}
