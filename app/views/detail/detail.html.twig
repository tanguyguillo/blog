{% extends 'base.html.twig' %}

{% block title %}<title>juste un article</title>{% endblock %}

{% block header %}
<header>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                {% if detail.postStatus == 'Open' %}
                <h1>{{detail.postTitle}}</h1>
                <h4><i class="bi bi-person-fill">&nbsp;&nbsp;</i>auteur : {{user.nameUser}} {{user.surNameUser}}</h4>
                <h6>Mise à jour le {{detail.postModified}}</h6>
                <hr class="star-light">
                {# todo : a condition post.postStatus = open # ... here not necessary the blogPost havebeen filtred
                before #}
                <p>&nbsp;{{detail.postChapo}} </p>
                <br>
                <p>{{detail.postContent}}</p>
                <a href = "{{ baseUrl }}/index.php?owp=bloglist#{{detail.idPost}}" class="btn btn-primary btn-small"
                    role="button" title="Retour">Retour</a>
                <hr>
                {% else %}
                <h1>Désolé cet article est en attente de validation ou a été fermé</h1>
                {% endif %}
            </div>
        </div>
    </div>
    </div>
</header>
{% endblock %}

{# postComments
{# id CommentCreated commentStatus commentContent user_id blog_post_id blog_post_user_id #}
{% block myComments %}
<div class="d-flex flex-column min-vh-100">
    <div class="container">
        <h4 class="text-center">Commentaire(s)</h4>
        <hr>
        {% for comment in postComments %}
        {% if comment.commentStatus == 'Open' %}
        <div class="mb-3">
            </p><span class="bi bi-chat-left">&nbsp;&nbsp;</span>{{comment.commentContent}}<span></p>
        </div>
        {% endif %}
        <hr>
        {% endfor %}
    </div>
</div>
{% endblock %}

    {% block giveComment %}
<div class="d-flex flex-column min-vh-100">
            <div class="container">
                    <h4 class="text-center">Ajouter un commentaire</h4>
                    <!-- form comment-->
                        <form name="giveComment" id="giveCommentForm">
                            <div class="row control-group">
